{
  "name": "@gtm/service.user",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "files": [
    "bin",
    "config",
    "*.sh"
  ],
  "scripts": {
    "clean": "rimraf bin/*",
    "build": "yarn run clean && yarn install && tsc",
    "b": "yarn run build",
    "debug": "ts-node --nolazy --inspect-brk=5858 src/index.ts",
    "start": "if-env NODE_ENV=production && yarn run start:prd || yarn run start:dev",
    "start:dev": "cross-env-shell NODE_ENV=development \"nodemon --watch src/**/*.ts --watch swagger/**/*.ts --watch config/*.json --exec ts-node src/index.ts\"",
    "start:prd": "cross-env-shell NODE_ENV=production \"node bin/src/index.js\"",
    "test": "if-env NODE_ENV=production && yarn run test:prd || yarn run test:dev",
    "test:dev": "cross-env-shell NODE_ENV=development \"ts-node tests/index.ts\"",
    "test:prd": "cross-env-shell NODE_ENV=production \"node bin/tests/index.js\"",
    "swaggen": "rimraf ../gtm.lib.client.user/src/swagger/* && call ./node_modules/@gtm/lib.service/tool/swagger-codegen ./node_modules/@gtm/lib.service/tool ./swagger/output/swagger.json ../gtm.lib.client.user/src/swagger",
    "swagger": "tsoa swagger && tsoa routes && yarn run swaggen"
  },
  "keywords": [],
  "author": "MyBestBook.NET",
  "license": "UNLICENSED",
  "repository": {
    "url": "https://github.com/thanhptr/gtm.service.user.git"
  },
  "devDependencies": {
    "@types/config": "0.0.32",
    "@types/debug": "0.0.29",
    "@types/deep-equal": "^1.0.1",
    "@types/express": "^4.11.0",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/mongoose": "^4.7.34",
    "@types/passport": "^0.3.5",
    "@types/reflect-metadata": "0.0.5",
    "nodemon": "^1.14.11",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "@gtm/lib.common": "^1.0.9",
    "@gtm/lib.service": "^1.0.6",
    "@gtm/lib.service.auth": "^1.0.18",
    "config": "^1.29.2",
    "cross-env": "^5.1.3",
    "deep-equal": "^1.0.1",
    "express": "^4.16.2",
    "if-env": "^1.0.4",
    "inversify": "^4.10.0",
    "inversify-express-utils": "^5.2.1",
    "jsonwebtoken": "^8.1.1",
    "mongoose": "^4.13.9",
    "passport": "^0.4.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "tsoa": "github:thanhptr/tsoa",
    "yarn": "^1.4.0"
  }
}
